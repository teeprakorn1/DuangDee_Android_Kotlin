<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DuangDeeProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/giraffe_font</item>
    </style>
    <style name="input_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/blank</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="background">@drawable/shape_edit</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ems">10</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <style name="button_gold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="android:background">@drawable/click_bt_gold</item>-->
    </style>

    <style name="button_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button_duduang">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>
    <style name="Theme.DuangDeeProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DuangDeeProject.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DuangDeeProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tarot_card">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/img_duangdee_card</item>
    </style>
</resources>