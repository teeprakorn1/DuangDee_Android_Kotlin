<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="350dp"
            android:layout_height="375dp"
            android:background="@drawable/shape_otp1"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDisplayName"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Displayname :"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>



                <TextView
                    android:id="@+id/textNameuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"

                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textFirstName"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Firstname :"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textSurNameuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLastName"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Lastname :"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textBrithDayuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"

                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBrithDay"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BrithDay"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textGenderuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"

                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Gender :"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textPhoneuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Phone : "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/TextEmailuser"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="45dp"
                    android:text="แก้ไขข้อมูล"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="35dp"
                    android:backgroundTint="#570115"
                    android:text="ออกจากระบบ"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>