<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConfirmOtp_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ui.otp.ConfirmOtpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape_otp1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_line" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ยืนยันบัญชีของคุณ"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_line" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="* ช่องทางการรับรหัส OTP"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="•"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/EmailTxtView"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:text="suttipong@gmail.com"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Back_Btn"
                style="@style/button_black"
                android:layout_width="125dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="@string/bt_back"/>

            <Button
                android:id="@+id/Confirm_Btn"
                style="@style/button_gold"
                android:text="@string/bt_confirm" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>