<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ys"
    tools:context=".ui.horoscope.tarot.TarotActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gold" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bt_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/img_bt_back1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagetarot1"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot2"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot3"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot4"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagetarot5"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot6"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot7"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot8"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagetarot9"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot10"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot11"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot12"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagetarot13"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot14"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot15"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                        <ImageView
                            android:id="@+id/imagetarot16"
                            style="@style/tarot_card"
                            android:theme="@style/tarot_card" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_txt"
                        android:fontFamily="@font/giraffe_font"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="เลือกเพียง 1 ใบเพื่อดูคำทำนาย"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/bt_predict"
                style="@style/button_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/gold"
                android:fontFamily="@font/giraffe_font"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ทำนาย"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>